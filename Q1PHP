Q1.php

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    

<?php
$A=$_GET["A"];

$B=$_GET[“B”];

$C=$_GET[“C”];

$D=$_GET[“D”];

$M=($A+$B+$C+$D)/4;

If($M>=5){
echo “Aprovado”;
}

else echo “Reprovado”;

?>

</body>
</html>
